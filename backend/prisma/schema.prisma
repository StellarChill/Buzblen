datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model EmployeeDetails {
  EmployeeID      String   @id @default(uuid()) @db.Uuid
  UserName        String   @unique @db.VarChar(50) // ใช้ @unique เพื่อป้องกันชื่อซ้ำ
  Password        String   @db.VarChar(255) // รหัสผ่านเข้ารหัส

  // Relations
  Posts           PostDetails[]
  Comments        CommentDetails[]
  Likes           LikeDetails[]
  Notifications   NotificationDetails[]
  Searches        SearchHistory[]
  DevDetails      DevDetails[]
  Feedbacks       FeedbackDetails[]
}

model PostDetails {
  PostID          String   @id @default(uuid()) @db.Uuid
  EmployeeID      String   @db.Uuid
  PostDescription String
  PostStatus      String
  DateCreated     DateTime @default(now())
  ImageURL        String
  IsDeleted       Boolean  @default(false)

  Employee        EmployeeDetails @relation(fields: [EmployeeID], references: [EmployeeID], onDelete: Cascade)
  Comments        CommentDetails[]
  Likes           LikeDetails[]
  Notifications   NotificationDetails[]
}

model CommentDetails {
  CommentID       String   @id @default(uuid()) @db.Uuid
  EmployeeID      String   @db.Uuid
  PostID          String   @db.Uuid
  CommentText     String
  DateCommented   DateTime @default(now())

  Employee        EmployeeDetails @relation(fields: [EmployeeID], references: [EmployeeID], onDelete: Cascade)
  Post            PostDetails     @relation(fields: [PostID], references: [PostID], onDelete: Cascade)
}

model LikeDetails {
  LikeID          String   @id @default(uuid()) @db.Uuid
  EmployeeID      String   @db.Uuid
  PostID          String   @db.Uuid
  DateLiked       DateTime @default(now())

  Employee        EmployeeDetails @relation(fields: [EmployeeID], references: [EmployeeID], onDelete: Cascade)
  Post            PostDetails     @relation(fields: [PostID], references: [PostID], onDelete: Cascade)
}

model NotificationDetails {
  NotificationID  String   @id @default(uuid()) @db.Uuid
  EmployeeID      String   @db.Uuid
  NotificationType String
  PostID          String   @db.Uuid
  DateNotified    DateTime @default(now())
  IsRead          Boolean  @default(false)

  Employee        EmployeeDetails @relation(fields: [EmployeeID], references: [EmployeeID], onDelete: Cascade)
  Post            PostDetails     @relation(fields: [PostID], references: [PostID], onDelete: Cascade)
}

model SearchHistory {
  SearchID        String   @id @default(uuid()) @db.Uuid
  EmployeeID      String   @db.Uuid
  SearchQuery     String
  SearchDateTime  DateTime @default(now())
  IsDeleted       Boolean  @default(false)

  Employee        EmployeeDetails @relation(fields: [EmployeeID], references: [EmployeeID], onDelete: Cascade)
}

model DevDetails {
  DevID           String   @id @default(uuid()) @db.Uuid
  EmployeeID      String   @db.Uuid
  DateOfBlock     DateTime
  ReasonOfBlock   String
  DateOfDelete    DateTime?
  ReasonOfDelete  String?

  Employee        EmployeeDetails @relation(fields: [EmployeeID], references: [EmployeeID], onDelete: Cascade)
}

model FeedbackDetails {
  FeedbackID      String   @id @default(uuid()) @db.Uuid
  EmployeeID      String   @db.Uuid
  DevID           String   @db.Uuid
  FeedbackText    String
  DateSubmitted   DateTime @default(now())
  DevResponse     String?

  Employee        EmployeeDetails @relation(fields: [EmployeeID], references: [EmployeeID], onDelete: Cascade)
}
